<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnServiceStop"
        android:layout_marginBottom="45dp"
        android:text="Click here to start background Service"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnServiceStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="306dp"
        android:text="Click Here to Stop Background Service"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnService"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="49dp"
        android:text="TextView" />
</RelativeLayout>